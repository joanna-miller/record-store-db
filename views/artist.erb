<% if @artist %>
  <h2>Artist: <%= @artist.name %></h2>

  <h3>Artist Albums</h3>

    <% if @artist.albums.any? %>
      <ul>
        <% @artist.albums.each do |album| %>
          <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no albums listed for this artist yet.</p>
    <% end %>

  <h3>Add an Album:</h3>

  <form action="/artists/<%= @artist.id %>/albums" method="post">
    <div class="form-group">
      <label for="album_name">Album name</label>
      <input id="album_name" name="album_name" class="form-control" type="text" required>
    </div>
    <button type="submit" class="btn">Add album</button>
  </form>

  <form action="/artists/<%= @artist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete" required>

  <button type="submit" class="btn">Delete Artist</button>
</form>

  <a href="/artists">Return to artist list</a> 

<% else %>
  <h3>You're searching for an artist that doesn't exist!</h3>
  <a href="/albums">Take Me Home</a>
<% end %>